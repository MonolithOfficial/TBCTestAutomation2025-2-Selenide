<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Selenide Test Execution" thread-count="3" parallel="tests">
    <test name="Chrome Test">
        <!--        <packages>-->
        <!--            <package name="ge.tbc.testautomation.tests"/>-->
        <!--        </packages>-->
        <parameter name="browserType" value="chrome"/>
        <classes>
            <class name="ge.tbc.testautomation.tests.SelenideTests"/>
            <class name="ge.tbc.testautomation.tests.SelenideTests2"/>
        </classes>
    </test>

    <test name="Edge Test">
        <parameter name="browserType" value="edge"/>
        <classes>
            <class name="ge.tbc.testautomation.tests.SelenideTests"/>
            <class name="ge.tbc.testautomation.tests.SelenideTests2"/>
        </classes>
    </test>

    <test name="Firefox Test">
        <parameter name="browserType" value="firefox"/>
        <classes>
            <class name="ge.tbc.testautomation.tests.SelenideTests"/>
            <class name="ge.tbc.testautomation.tests.SelenideTests2"/>
        </classes>
    </test>
</suite>
